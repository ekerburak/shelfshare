<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainBox" alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #282828;" stylesheets="@../assets/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BookController">
   <children>
      <ImageView fx:id="image" fitHeight="271.0" fitWidth="171.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/book_cover.jpeg" />
         </image>
      </ImageView>
      <Label fx:id="bookName" styleClass="text" text="Book Name" />
      <HBox alignment="CENTER" prefHeight="34.0" prefWidth="300.0" spacing="6.0">
         <children>
            <Label text="uploaded by" textFill="#6b6b6b" />
            <Label fx:id="uploaderName" text="uploaderName" textFill="#6b6b6b" />
         </children>
      </HBox>
   </children>
</VBox>
