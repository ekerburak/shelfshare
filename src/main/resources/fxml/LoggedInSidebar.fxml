<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxWidth="400.0" minWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.LoggedInSidebarController">
   <children>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" VBox.vgrow="ALWAYS">
         <items>
            <VBox alignment="BOTTOM_LEFT">
               <children>
                  <HBox alignment="CENTER" spacing="50.0">
                     <children>
                        <Label text="Your Shelves">
                           <font>
                              <Font name="Inter Regular" size="24.0" />
                           </font>
                        </Label>
                        <HBox spacing="5.0">
                           <children>
                              <ImageView fx:id="createShelfButton" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../assets/add.png" />
                                 </image>
                              </ImageView>
                              <ImageView fx:id="seeYourShelvesButton" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../assets/open_in_new.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="10.0" left="50.0" top="20.0" />
                     </padding>
                  </HBox>
                  <ListView prefHeight="598.0" prefWidth="318.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <HBox alignment="CENTER" spacing="50.0">
                     <children>
                        <Label text="Recommended">
                           <font>
                              <Font name="Inter Regular" size="24.0" />
                           </font>
                        </Label>
                        <HBox spacing="5.0">
                           <children>
                              <ImageView fx:id="seeRecommendedShelvesButton" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../assets/open_in_new.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="10.0" left="50.0" top="20.0" />
                     </padding>
                  </HBox>
                  <ListView prefHeight="598.0" prefWidth="318.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </items>
      </SplitPane>
      <HBox alignment="CENTER" maxHeight="80.0" minHeight="80.0" spacing="150.0" style="-fx-background-color: red;" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/acount_circle.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="usernameLabel" text="sewalT">
                     <font>
                        <Font name="Inter Regular" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <ImageView fx:id="settingsButton" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/settings.png" />
               </image>
            </ImageView>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
