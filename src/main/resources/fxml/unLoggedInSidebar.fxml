<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxWidth="400.0" minWidth="400.0" prefHeight="953.0" prefWidth="400.0" stylesheets="@../assets/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.UnLoggedInSidebarController">
   <children>
      <VBox>
         <children>
            <HBox alignment="CENTER" style="-fx-background-color: #222222;">
               <children>
                  <Label stylesheets="@../assets/style.css" text="Recommended" textFill="#c2c2c2">
                     <font>
                        <Font name="Inter Regular" />
                     </font>
                     <styleClass>
                        <String fx:value="text" />
                        <String fx:value="bold" />
                     </styleClass>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <ImageView fx:id="seeRecommendedShelvesButton" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/open_in_new.png" />
                     </image>
                  </ImageView>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <ListView prefHeight="880.0" prefWidth="400.0" style="-fx-background-color: #222222;" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #222222;">
         <children>
            <Button fx:id="loginSignupButton" mnemonicParsing="false" prefHeight="46.0" prefWidth="179.0" styleClass="greenButton" text="Log In / Sign up">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </Button>
            <Label text="to see more">
               <styleClass>
                  <String fx:value="italic" />
                  <String fx:value="text" />
               </styleClass>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
