<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" stylesheets="@../assets/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BookEditingController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #222222;" VBox.vgrow="ALWAYS">
         <children>
            <ImageView fx:id="goBackIcon" fitHeight="32.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
               <image>
                  <Image url="@../assets/arrow_back.png" />
               </image>
            </ImageView>
            <Label fx:id="shelfName" style="-fx-text-fill: #676565;" styleClass="text" text="Csciler" HBox.hgrow="ALWAYS" />
            <Label fx:id="bookName" styleClass="text" text="Big Java Late Object" HBox.hgrow="ALWAYS" />
            <Region HBox.hgrow="ALWAYS" />
            <ImageView fx:id="rightArrow" fitHeight="35.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
               <image>
                  <Image url="@../assets/chevron_left.png" />
               </image>
            </ImageView>
            <ImageView fx:id="leftArrow" fitHeight="35.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
               <image>
                  <Image url="@../assets/chevron_right.png" />
               </image>
            </ImageView>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <StackPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: #333333;" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/a4-paper.jpeg" />
                     </image>
                  </ImageView>
                  <Pane fx:id="drawPane" />
               </children>
            </StackPane>
            <VBox alignment="CENTER" prefWidth="30.0" spacing="20.0" style="-fx-background-color: #D9D9D9;">
               <children>
                  <ImageView fx:id="highlightIcon" fitHeight="58.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/ink_highlighter.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="underlineIcon" fitHeight="58.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/format_underlined.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="eraseIcon" fitHeight="58.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/ink_eraser.png" />
                     </image>
                  </ImageView>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
